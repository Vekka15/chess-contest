%nav.navbar.navbar-default.navbar-inverse.navbar-static-top{ role: 'navigation' }
  .container
    .navbar-header
      %a.navbar-brand{href: '/tournaments'} TableFootball
    .collapse.navbar-collapse.navbar-collapse-top
      %ul.nav.navbar-right.navbar-nav
        - unless current_user.nil?
          %li
            = link_to user_path(current_user) do
              %span.text PROFILE
              %span.glyphicon.glyphicon-user.icon

          %li
            = link_to destroy_user_session_path, method: :delete do
              %span.text LOG-OUT
              %span.glyphicon.glyphicon-log-out.icon
        - else
          %li
            = link_to new_user_session_path do
              %span.text LOG-IN
              %span.glyphicon.glyphicon-log-in.icon
          %li
            = link_to new_user_registration_path do
              %span.text SIGN-UP
              %span.icon{style: 'font-size: 25px; margin: 0; padding: 0'}
                = fa_icon 'user-plus'
