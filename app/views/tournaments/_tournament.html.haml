.panel.panel-default
  .panel-heading
    = tournament.name.upcase
    .pull-right
      = fa_icon 'info-circle'
  .panel-body
    Deadline:
    = tournament.deadline
    %br
    Street:
    = tournament.street
    %br
    City:
    = tournament.city
    %br
    Participations:
    = tournament.participation_number
    out of
    = tournament.participation_limit
    .pull-right
      - unless tournament.check_participation_limit
        = link_to 'Participate', participations_path(user_id: current_user.id, tournament_id: tournament.id), method: :post,remote: true, class: 'btn btn-success'
      - else
        = link_to 'Participate', participations_path(user_id: current_user.id, tournament_id: tournament.id), method: :post, disabled: true, class: 'btn btn-success'
